<header class='header'>
  <div class='header__text'>
    <a class="aTagTitle" href='/'><h1>Cards against @SQLightMare </h1></a>
  </div>
  <div class='header__links'>

    <div class='header-buttons'>
      <button id="refresh">Refresh Game</button>
      {{#if user}}
        <button onclick="location.href='/logout';">Login Out</button>
      {{else}}
        <button onclick="location.href='/login';">Login</button>
      {{/if}}
      <button onclick="location.href='/joinGame';">Join Game</button>
      <button onclick="location.href='/createGame';">Create Game</button>
      {{#if user}}
        <p>Welcome {{user.name}} !</p>
      {{/if}}
    </div>
  </div>
</header><!-- header.hbs -->